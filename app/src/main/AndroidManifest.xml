<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.akkubattrent">

    <!-- ========== ФУНКЦИОНАЛЬНЫЕ ВОЗМОЖНОСТИ ========== -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- ========== РАЗРЕШЕНИЯ ========== -->
    <!-- Уведомления -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Камера -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Интернет и сеть -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Геолокация -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Хранилище -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Фоновые сервисы -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- Точные будильники -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Установка пакетов -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!-- Запуск при загрузке -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- ========== ПРИЛОЖЕНИЕ ========== -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/akku_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/akku_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- ========== ПРОВАЙДЕРЫ ========== -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.akkubattrent.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ========== АКТИВНОСТИ СКАНЕРА ========== -->
        <activity android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="landscape"
            tools:replace="android:screenOrientation"/>

        <activity
            android:name=".ScannerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentActivity"/>

        <!-- ========== ОСНОВНЫЕ АКТИВНОСТИ ========== -->
        <!-- Вход в приложение -->
        <activity android:name=".EntranceInApp.SplashScreenActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EntranceInApp.LoginActivity" />
        <activity android:name=".EntranceInApp.SignUpWindow" />
        <activity android:name=".EntranceInApp.TechnicalWorksActivity" />
        <activity android:name=".EntranceInApp.AppUpdateActivity" />
        <activity android:name=".EntranceInApp.ServiceNotAvailableActivity" />
        <activity android:name=".EntranceInApp.UserBanActivity" />
        <activity android:name=".EntranceInApp.RegisterConfirmationActivity" />
        <activity android:name=".EntranceInApp.VerificationWebViewActivity" />

        <!-- Главное меню -->
        <activity android:name=".MainMenuActivity"/>

        <!-- Профиль пользователя -->
        <activity android:name=".UserProfile.UserProfileActivity" />
        <activity android:name=".UserProfile.MyAccountActivity" />
        <activity android:name=".UserProfile.SupportActivity" />
        <activity android:name=".UserProfile.MyOrdersActivity" />
        <activity android:name=".UserProfile.FAQActivity" />
        <activity android:name=".UserProfile.UsagePolicyActivity" />
        <activity android:name=".UserProfile.AboutAppActivity" />
        <activity android:name=".UserProfile.UserProfileActivityUpdate" />

        <!-- Карты и документы -->
        <activity android:name=".Account.MyCardsActivity" />
        <activity android:name=".Account.AddNewCardActivity" />
        <activity android:name=".Account.PassportActivity" />

        <!-- Постаматы -->
        <activity android:name=".Postamat.PostamatActivity" />
        <activity android:name=".Postamat.RentProductActivity" />
        <activity android:name=".Postamat.ReturnProductActivity" />
        <activity android:name=".Postamat.ReturnConfirmationActivity" />
        <activity android:name=".Postamat.ReviewActivity" />
        <activity android:name=".Postamat.OpenPostamatActivity" />
        <activity android:name=".Postamat.PostamatPhotoActivity" />
        <activity android:name=".AllCategories.RouteToPostamat" />

        <!-- Офис -->
        <activity android:name=".Office.OfficeActivity" />
        <activity android:name=".Office.RentProductOfficeActivity" />
        <activity android:name=".Office.ReturnProductOfficeActivity" />
        <activity android:name=".Office.GiveProductForPeopleActivity" />
        <activity android:name=".Office.GiveProductActivity" />
        <activity android:name=".Office.DeclineGiveProductActivity" />
        <activity android:name=".Office.WaitingPaymentActivity" />
        <activity android:name=".Office.NotHaveMoneyActivity" />

        <!-- Категории товаров -->
        <activity android:name=".AllCategories.AllCategoriesActivity" />
        <activity android:name=".AllCategories.AllProjectorsActivity" />
        <activity android:name=".AllCategories.AllConsolesWindow" />
        <activity android:name=".AllCategories.AllVacuumCleanerActivity" />
        <activity android:name=".AllCategories.JigsawsActivity" />
        <activity android:name=".AllCategories.PerforatorsActivity" />
        <activity android:name=".AllCategories.ConstructionVacuumCleanersActivity" />
        <activity android:name=".AllCategories.ScrewdriversActivity" />
        <activity android:name=".AllCategories.MillingMachinesActivity" />
        <activity android:name=".AllCategories.ChainSawsActivity" />
        <activity android:name=".AllCategories.AirCompressorsActivity" />
        <activity android:name=".AllCategories.GrassTrimmersActivity" />
        <activity android:name=".AllCategories.VintovertActivity" />
        <activity android:name=".AllCategories.PressureWashersActivity" />

        <!-- Продление заказа -->
        <activity android:name=".ProlongOrderActivity" />

        <!-- ========== ОБУЧАЮЩИЕ АКТИВНОСТИ ========== -->
        <!-- Версия 1 -->
        <activity android:name=".TutorialClass.GreetingWindowActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowAddCardWindowActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowAddPassportDataActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowFindPostamatWindowActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowRentProductWindowActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowBackProductWindowActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.GreetingWindowLastActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Версия 2 -->
        <activity android:name=".TutorialClass.GreetingWindowActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowAddCardWindowActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowAddPassportDataActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowFindPostamatWindowActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowRentProductWindowActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.HowBackProductWindowActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".TutorialClass.GreetingWindowLastActivityDouble"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ========== СЕРВИСЫ И РЕСИВЕРЫ ========== -->
        <receiver android:name=".Utils.RentAlarmReceiver" />

        <service
            android:name=".Utils.OrderCheckService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"/>

        <receiver
            android:name=".Utils.BootReceiver"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Utils.RentCheckService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />
    </application>
</manifest>