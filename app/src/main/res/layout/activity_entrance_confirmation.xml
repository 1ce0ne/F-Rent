<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        app:srcCompat="@drawable/logotip_akkkubatt" />

    <TextView
        android:id="@+id/textViewUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="60dp"
        android:gravity="center_horizontal"
        android:text="Подтверждение номера\nтелефона"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/textWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:gravity="center_horizontal"

        android:text="Выберите удобный для Вас способ"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUpdate" />

    <FrameLayout
        android:id="@+id/smsButton"
        android:layout_width="0dp"
        android:layout_height="55dp"

        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sign_up_and_login_background"

        app:layout_constraintEnd_toEndOf="@+id/textViewUpdate"
        app:layout_constraintStart_toStartOf="@+id/textViewUpdate"
        app:layout_constraintTop_toBottomOf="@+id/textWaiting">

        <TextView
            android:id="@+id/smsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical|center_horizontal"

            android:text="Через SMS"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/telegramButton"
        android:layout_width="0dp"
        android:layout_height="55dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/sign_up_and_login_background"

        app:layout_constraintEnd_toEndOf="@+id/smsButton"
        app:layout_constraintStart_toStartOf="@+id/smsButton"
        app:layout_constraintTop_toBottomOf="@+id/smsButton">

        <TextView
            android:id="@+id/telegramText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical|center_horizontal"

            android:text="Через Telegram"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>