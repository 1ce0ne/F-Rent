<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <!-- Обертка для ImageView с CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/product_image"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название продукта"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/aboutOfProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание продукта..."
                android:textSize="14sp"
                android:layout_below="@id/productName"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <!-- Контейнер для текста "Забронировано" и цены -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Забронировано"
                    android:textSize="15sp"
                    android:textColor="#FF0000"
                    android:layout_marginEnd="8dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/costsOfProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Р/Час"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>