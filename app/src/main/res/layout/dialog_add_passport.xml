<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/dialog_background">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавление паспорта"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- ФИО -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sign_up_and_login_background"
        android:padding="4dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ФИО"
            android:inputType="textCapWords"
            android:background="@null"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Номер и Серия -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Серия -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/sign_up_and_login_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/etPassportSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Серия"
                android:inputType="number"
                android:background="@null"
                android:padding="12dp"
                android:maxLength="4"/>
        </LinearLayout>

        <!-- Номер -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/sign_up_and_login_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/etPassportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Номер"
                android:inputType="number"
                android:background="@null"
                android:padding="12dp"
                android:maxLength="6"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Дата рождения и Дата выдачи -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Дата рождения -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/sign_up_and_login_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/etBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Дата рождения"
                android:inputType="date"
                android:background="@null"
                android:padding="12dp"
                android:maxLength="10"/>
        </LinearLayout>

        <!-- Дата выдачи -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sign_up_and_login_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/etIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Дата выдачи"
                android:inputType="date"
                android:background="@null"
                android:padding="12dp"
                android:maxLength="10"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Код подразделения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_and_login_background"
        android:layout_marginBottom="8dp"
        android:padding="4dp">

        <EditText
            android:id="@+id/etDepartmentCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Код подразделения"
            android:inputType="number"
            android:padding="12dp"
            android:maxLength="7"/>
    </LinearLayout>

    <!-- Кем выдан -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sign_up_and_login_background"
        android:padding="4dp">

        <EditText
            android:id="@+id/etIssuedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Кем выдан"
            android:inputType="textCapSentences"
            android:background="@null"
            android:padding="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Сохранить"
        android:background="@drawable/sign_up_and_login_button_background"
        android:textColor="@android:color/black"/>
</LinearLayout>