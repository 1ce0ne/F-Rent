<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Мягкая тень с плавным усилением -->
    <item>
        <shape>
            <solid android:color="#05000000" /> <!-- Начальная прозрачность чуть выше -->
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="0.5dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp">
        <shape>
            <solid android:color="#07000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape>
            <solid android:color="#09000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="1.5dp" android:bottom="1.5dp" android:left="1.5dp" android:right="1.5dp">
        <shape>
            <solid android:color="#0B000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape>
            <solid android:color="#0D000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:top="2.5dp" android:bottom="2.5dp" android:left="2.5dp" android:right="2.5dp">
        <shape>
            <solid android:color="#10000000" /> <!-- Финишный слой чуть плотнее -->
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- Основной фон (смещение = 2.5dp, чтобы тень была заметнее) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2.5dp"
        android:bottom="2.5dp">
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>